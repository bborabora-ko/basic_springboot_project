{{>layouts/header}}

{{#article}}
<form class="container" action="/articles/update" method="post">
    <<!-- 수정은 본래 patch메소드 사용하지만 form태그는 post,get메소드만을 지원하므로 현재는 post로 대신 사용함 -->
    <input name="id" type="hidden" value="{{id}}" />
    <div class="mb-3">
        <label class="form-label">제목</label>
        <input type="text" class="form-control" name="title" value="{{title}}"> <!-- name 속성 값으로는 DTO 필드명 기재, name속성을 작성하지 않으면 DTO에 연결되지 않음-->
    </div>
    <div class="mb-3">
        <label class="form-label">내용</label>
        <textarea class="form-control" rows="3" name="content">{{content}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="/articles/{{id}}">Back</a>
</form>
{{/article}}
{{>layouts/footer}}